pipeline{
    agent any
    stages{
        stage('Checkout the code from GitHub'){
            steps{
                 git url: 'https://github.com/AbeerSaxena/star-agile-health-care/'
                 echo 'github url checkout'
            }
        }
        stage('Code Compile '){
            steps{
                echo 'Starting Compiling'
                sh 'mvn compile'
            }
        }
        stage('Testing'){
            steps{
                sh 'mvn test'
            }
        }
        stage('QA'){
            steps{
                sh 'mvn checkstyle:checkstyle'
            }
        }
        stage('Package'){
            steps{
                sh 'mvn package'
            }
        } 
       stage('Run Docker'){
          steps{
               sh 'docker build -t myimg .'
           }
         }
      stage('Port Expose'){
            steps{
                sh 'docker run -dt -p 8082:8082 --name healthCare myimg /bin/bash'
            }
        }   

    }
}
